  <h1>Dobrodružství</h1>
  {foreach $adventures as $adventure}
    {continueIf $adventure->event and !$adventure->event->active}
  <div class="adventure">
    <h3>{$adventure->name}</h3>
    <p>
      {$adventure->description|genderify}<br>
      Odměna: {$adventure->rewardT} + kořist <a href="{plink Adventure:mounts $adventure->id}">Vybrat jezdecké zvíře</a>
    </p>
  </div>
  {/foreach}