{layout "../@layout.latte"}
{block title}Hrad{/block}
{block content}
  <h1>{$castle->name}</h1>
  <p>Úroveň: {$castle->level} Stav: {$castle->hp}%</p>
  {if $canUpgrade}<a n:href="upgrade!">Vylepšit</a> za {$castle->upgradePriceT}<br>{/if}
  {if $castle->hp < 100}<a n:href="repair!">Opravit</a> za {$castle->repairPriceT}{/if}
{/block}
