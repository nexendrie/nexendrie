{layout "../@layout.latte"}
{block title}Články{/block}
{block content}
  <h1>Články</h1>
  <h3>Kategorie</h3>
  <ul n:inner-foreach="$categories as $slug => $name">
    <li><a n:href="Articles:category $slug">{$name}</a></li>
  </ul>
  {if $user->isAllowed("article", "add")}<a n:href=":Admin:Article:add">Napsat článek</a>{/if}
{/block}