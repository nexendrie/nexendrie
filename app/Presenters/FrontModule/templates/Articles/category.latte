{layout "../@layout.latte"}
{block title}{$category}{/block}
{block content}
  <h1>{$category} strana {$paginator->page}</h1>
  {if count($articles) === 0}
  <p>Žádné články.</p>
  {else}
    {foreach $articles as $article}
  <article id="article-{$article->id}">
    <h3><a n:href="Article:view $article->id">{$article->title}</a></h3>
    Autor: {control userProfileLink $article->author} Přidáno: {$article->addedAt} Komentářů: <a href="{link Article:view $article->id}#comments">{$article->comments->countStored()}</a><br>
    {$article->text|truncate:150}
  </article>
    {/foreach}
  {/if}
{/block}