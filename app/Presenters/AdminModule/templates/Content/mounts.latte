{layout "../@layout.latte"}
{block title}Jezdecká zvířata{/block}
{block content}
  <h1>Jezdecká zvířata</h1>
  <table id="mounts">
    <tr><th>Jméno</th><th>Akce</th></tr>
    {foreach $mounts as $mount}
    <tr><td>{$mount->name}</td><td><a n:href="Mount:edit $mount->id">Upravit</a></td></tr>
    {/foreach}
  </table>
  <p><a n:href="Mount:new">Přidat</a></p>
{/block}