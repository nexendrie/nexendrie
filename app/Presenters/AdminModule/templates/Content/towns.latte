{layout "../@layout.latte"}
{block title}Města{/block}
{block content}
  <h1>Města</h1>
  <table id="towns">
    <tr><th>Jméno</th><th>Akce</th></tr>
    {foreach $towns as $town}
    <tr><td>{$town->name}</td><td><a n:href="Town:edit $town->id">Upravit</a></td></tr>
    {/foreach}
  </table>
  <p id="new"><a n:href="Town:new">Přidat město</a></p>
{/block}